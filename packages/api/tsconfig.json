{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "typeRoots": ["@types"]
  },
  "include": ["src"]
}
